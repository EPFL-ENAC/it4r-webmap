{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "SelectableGroupItem": {
            "properties": {
                "children": {
                    "items": {
                        "$ref": "#/definitions/SelectableSingleItem"
                    },
                    "type": "array"
                },
                "label": {
                    "type": "string"
                },
                "selected": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "SelectableItem": {
            "anyOf": [
                {
                    "$ref": "#/definitions/SelectableSingleItem"
                },
                {
                    "$ref": "#/definitions/SelectableGroupItem"
                }
            ]
        },
        "SelectableSingleItem": {
            "properties": {
                "ids": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "label": {
                    "type": "string"
                },
                "legend": {
                    "type": "string"
                },
                "selected": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "maplibregl.LngLat": {
            "properties": {
                "lat": {
                    "type": "number"
                },
                "lng": {
                    "type": "number"
                }
            },
            "type": "object"
        },
        "maplibregl.LngLatLike": {
            "anyOf": [
                {
                    "items": [
                        {
                            "type": "number"
                        },
                        {
